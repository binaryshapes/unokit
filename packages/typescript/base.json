{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "rootDir": "${configDir}",
    "baseUrl": "${configDir}",
    "outDir": "${configDir}/dist",
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "customConditions": ["development"]
  },
  // HACK: This is a workaround for with ts-node and Jest < 30 when moduleResolution is Bundler, NodeNext or Node16.
  // This issue was fixed v30.0.0-alpha.5:
  // Ref: https://github.com/jestjs/jest/releases/tag/v30.0.0-alpha.5
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      // To avoid error for in node10.
      "customConditions": null,
      "module": "ESNext",
      "moduleResolution": "Node10"
    }
  },
  "include": [
    // Typical presets for all packages and apps.
    "${configDir}/src/**/*.ts",
    "${configDir}/tests/**/*.ts",
    "${configDir}/examples/**/*.ts"
  ],
  // Typical exclude for all packages.
  "exclude": [
    "${configDir}/node_modules",
    "${configDir}/dist",
    "${configDir}/coverage",
    "${configDir}/eslint"
  ]
}
