{
  "extends": "./base.json",
  "compilerOptions": {
    // Neccesary to generate declaration files.
    "rootDir": "${configDir}/src",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo"
  },
  "exclude": [
    "${configDir}/tests/**/*.ts"
  ],
  "references": []
}
